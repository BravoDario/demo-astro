---
import ListBlog, { blogsEnabled } from "../../components/blog/ListBlog.jsx";
import Layout from "../../layouts/Layout.astro";
import BlogDetails from "../../components/blog/BlogDetails.jsx";
import Footer from "../../components/Footer.astro";

export function getStaticPaths() {
    return blogsEnabled;
}

const {blog} = Astro.params;
---

<Layout>
    <div class="bg-slate-500 flex flex-col items-center justify-center">
        <BlogDetails blogName={blog} client:load />
        <div class="w-full px-52 py-5 bg-slate-300">
            <h1 class="text-2xl font-bold pb-2">Deja un comentario</h1>
            <div class="flex flex-col items-center justify-center gap-5">
                <textarea
                    class="w-full h-40 p-3 rounded-lg border-2 border-slate-300"
                    placeholder="Escribe aquÃ­ tu comentario"></textarea>
                <button class="bg-green-600 text-white p-3 rounded-lg">
                    Enviar
                </button>
            </div>
        </div>
    </div>
    <Footer />
</Layout>
<style is:global>
    .blog-image {
        width: 140%;
        margin: 2rem;
    }
</style>
